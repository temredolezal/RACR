  <% @page_title = "Admin Users List" %>

    <h2>Admin Users</h2>

    <div class="links btn-group">
      <%= link_to(image_tag('plus_sign.png', :size => '11x11', :class => 'space', :alt => '+') + 'Add New Admin User', {:action => 'new'}, :class => 'btn btn-custom2 navbar-right') %>
    </div>

    <h3><%= pluralize(@admin_users.size, 'admin user') %> found</h3>

    <table summary="Admin users list">
      <tr>
        <th>Username</th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
      <% @admin_users.each do |admin_user| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= admin_user.username %></td>
        <td><%= admin_user.name %></td>
        <td><%= mail_to(admin_user.email) %></td>
        <td class="actions">
          <div class="links btn-group">
            <%= link_to('Edit', {:action => 'edit', :id => admin_user.id}, :class => 'btn btn-custom2') %>
            <%= link_to('Delete', {:action => 'delete', :id => admin_user.id}, :class => 'btn btn-custom2') %>
            </div>
        </td>
      </tr>
      <% end %>
    </table>

  </div>
