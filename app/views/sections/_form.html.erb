  <%= error_messages_for(@section) %>

  <table summary="Page form fields">
    <tr>
      <th><%= f.label(:project_id, "Project Name") %></th>
      <td><%= f.select(:project_id, @projects.map {|s| [s.name, s.id]}) %></td>
    </tr>
    <tr>
      <th><%= f.label(:name, "Section Name") %></th>
      <td><%= f.text_field(:name) %></td>
    </tr>
    <tr>
      <th><%= f.label(:permalink, "Permalink Name") %></th>
      <td><%= f.text_field(:permalink) %></td>
    </tr>
    <tr>
      <th><%= f.label(:position, "Section Position") %></th>
      <td><%= f.select(:position, 1..@section_count) %></td>
    </tr>
    <tr>
      <th><%= f.label(:visible, "Section Visible?") %></th>
      <td><%= f.check_box(:visible) %> Yes</td>
    </tr>
  </table>