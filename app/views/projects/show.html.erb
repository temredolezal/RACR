  <% @page_title = "Show Project" %>
  <br>
  <div class="links btn-group">
    <%= link_to("<< Back to Projects List", {:action => 'index'}, :class => 'btn btn-custom') %>
  </div>

    <h2>Project Detail</h2>

    <table summary="Project detail view">
      <tr>
        <th>Name</th>
        <td><%= @project.name %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= @project.position %></td>
      </tr>
      <tr>
        <th>Visible?</th>
        <td><%= @project.visible ? 'true' : 'false' %></td>
      </tr>
      <tr>
        <th># of Sections</th>
        <td><%= @project.sections.size %></td>
      </tr>
      <tr>
        <th>Created</th>
        <td><%= @project.created_at %></td>
      </tr>
      <tr>
        <th>Updated</th>
        <td><%= @project.updated_at %></td>
      </tr>
      <tr>
        <th>Actions</th>
        <td>
          <div class="links btn-group">
            <%= link_to("View All Sections", {:controller => 'sections', :project_id => @project.id}, :class => 'btn btn-custom') %><br>
            <%= link_to("Edit Project", {:action => 'edit', :id => @project.id}, :class => 'btn btn-custom') %><br>
            <%= link_to("Delete Project", {:action => 'delete', :id => @project.id}, :class => 'btn btn-custom') %>
          </div>
        </td>
      </tr>
    </table>
